{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs", // CommonJS makes life easiest with Express/EJS
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true, // allow `import express from "express"`
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
