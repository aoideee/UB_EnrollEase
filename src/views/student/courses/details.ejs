 <!-- File: src/views/student/courses/details.ejs -->

 <%- include('../../../partials/header', {
  title: course.title,
  pageCss: ['/css/dashboard.css','/css/student.css']
}) %>

<main>
  <h1><%= course.code %> — <%= course.title %></h1>
  <p><strong>Description:</strong> <%= course.description || 'N/A' %></p>
  <p><strong>Schedule:</strong> <%= course.schedule %></p>
  <p>
    <strong>Capacity:</strong>
    <%= course.enrolledCount %> / <%= course.capacity %>
  </p>
  <form action="/students/courses/<%= course.id %>/enroll" method="POST">
    <button type="submit">Enroll</button>
  </form>
  <a href="/students/courses">← Back to catalog</a>
</main>

<%- include('../../../partials/footer') %>

