<%- include('../partials/header', {
  title: 'Reset Password',
  pageCss: ['/css/style.css', '/css/forgot-password.css']
}) %>

<main class="landing-container">
  <div class="auth-container">
    <div class="university-header">
      <img
        src="/images/logo.jpg"
        alt="University of Belize | Education Empowers a Nation"
        width="275"
        height="325"
      />
      <h2>Reset Your Password</h2>
    </div>

    <% if (error) { %>
      <div class="error-message"><%= error %></div>
    <% } %>

    <form action="/auth/forgot-password" method="POST" class="signup-form">
      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" required />
      </div>
      <button type="submit" class="btn-primary">Send Reset Link</button>
    </form>

    <p class="login-link">
      Remember your password? <a href="/auth/login">Log in</a>
    </p>
  </div>
</main>

<%- include('../partials/footer') %>
