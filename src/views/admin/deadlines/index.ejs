<%- include('../../partials/header', {
    title: 'Manage Deadlines',
    pageCss: ['/css/overview.css']
  }) %>
  
  <main>
    <h1>Manage Deadlines</h1>
    <a href="/admin/deadlines/enroll/edit" class="btn">Edit Enrollment Deadline</a>
    <a href="/admin/deadlines/drop/edit" class="btn">Edit Drop Deadline</a>
  
    <table>
      <thead>
        <tr>
          <th>Type</th>
          <th>Date</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% deadlines.forEach(d => { %>
          <tr>
            <td><%= d.type.charAt(0).toUpperCase() + d.type.slice(1) %></td>
            <td><%= d.date.toISOString().split('T')[0] %></td>
            <td>
              <a href="/admin/deadlines/<%= d.type %>/edit">Edit</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
  
  <%- include('../../partials/footer') %>  