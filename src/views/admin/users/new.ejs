<%- include('../../partials/header',{ title:'New User' }) %>
<main>
  <h1>Create User</h1>
  <form action="/admin/users" method="POST">
    <div><label>Name<input name="name" required></label></div>
    <div><label>Email<input type="email" name="email" required></label></div>
    <div><label>Password<input type="password" name="password" required></label></div>
    <div>
      <label>Role
        <select name="role" required>
          <option>student</option><option>professor</option><option>admin</option>
        </select>
      </label>
    </div>
    <button type="submit">Create</button>
    <a href="/admin/users">Cancel</a>
  </form>
</main>
<%- include('../../partials/footer') %>